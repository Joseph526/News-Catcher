<div class="container-fluid">
    <div class="jumbotron">
        <h1>News Catcher
            <small>
                <i class="fab fa-android"></i>
                <em>Android Edition</em>
            </small>
        </h1>
        <button type="button" class="btn btn-secondary" id="btnGetArticles">Get Articles</button>
    </div>
    <p>This is the Handlebars home page.</p>
    <div class="container" id="resultsArea">
        {{#each articles}}
            <div class="row">
                <div class="col-md">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <h5 class="card-title">{{headline}}</h5>
                            <p class="card-text">
                                <div>{{summary}}</div>
                                <br>
                                <div>
                                    <a href={{url}} target="_blank">{{url}}</a>
                                </div>
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary" id={{_id}}>Notes</button>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>
